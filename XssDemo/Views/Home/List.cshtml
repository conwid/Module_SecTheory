@model IEnumerable<XssDemo.Controllers.BlogPost>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<section id="user-posts">
    <ul>
        @foreach (var post in Model)
        {
            <li class="post-item">
                <div class="post-image">
                    @* <img src="@post.Image" alt="@post.Content" /> *@
                    @Html.Raw($"<img src=\"{post.Image}\" alt=\"{post.Content}\" />" )
                </div>
                <p>@post.Content</p>
            </li>
        }
    </ul>
</section>
